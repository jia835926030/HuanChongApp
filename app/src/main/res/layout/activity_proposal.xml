<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iblood.ui.setmodoule.ProposalActivity">7
<com.zhy.autolayout.AutoRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60px"
    >
    <ImageView
        android:layout_width="40px"
        android:layout_height="45px"
        android:id="@+id/proposal_back"
        android:background="@drawable/back_gray"/>

    <TextView
        android:layout_width="200px"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/send"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="产品建议"
        android:textSize="17sp" />
    <TextView
   android:layout_marginTop="3dp"
        android:textSize="17sp"
        android:text="发送"
        android:id="@+id/send"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="80px"
        android:layout_height="40px"
        android:layout_alignParentLeft="true"/>
</com.zhy.autolayout.AutoRelativeLayout>
    <EditText
        android:gravity="top"
        android:layout_width="match_parent"
        android:autoText="true"
        android:autoLink="all"
        android:layout_height="300px"
        android:hint="写下你的建议让我们做的更好"
        android:id="@+id/proposal_edittext"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        >
        <TextView
            android:id="@+id/proposal_textview"
            android:layout_width="80px"
            android:layout_height="40px"
            android:text="0/250"
            android:layout_alignParentRight="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
