<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iblood.ui.personal.PersonalFragment">
    <LinearLayout
        android:layout_margin="15px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="所在地"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="选择其他城市"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/personal_tianzhuan"
            android:src="@drawable/enter"
            android:layout_width="35px"
            android:layout_height="35px" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60px">
        <LinearLayout
            android:background="#e59707"
            android:padding="10px"
            android:layout_marginLeft="30px"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="5px"
                android:src="@drawable/relate"
                android:layout_width="40px"
                android:layout_height="40px" />
            <TextView
                android:id="@+id/personal_dizhi"
                android:text="北京"
                android:layout_marginLeft="5px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="30px"
            android:layout_height="wrap_content"></LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="30px"
            android:layout_height="wrap_content"></LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="15px"
        android:background="#a0786868"
        android:layout_width="match_parent"
        android:layout_height="0.01px" />
    <TextView
        android:text="其他服务"
        android:layout_margin="15px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <GridLayout
        android:rowCount="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:text="洗澡"
            android:button="@null"
            android:id="@+id/personal_xizao"
            android:background="@drawable/fuwu_personal"
            android:checked="true"
            android:gravity="center"
            android:layout_marginLeft="30px"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_height="60px" />
        <CheckBox
            android:text="接/送"
            android:button="@null"
            android:background="@drawable/fuwu_personal"
            android:layout_marginLeft="30px"
            android:gravity="center"
            android:id="@+id/personal_jiesong"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_height="60px" />
        <CheckBox
            android:text="kongbai"
            android:button="@null"
            android:gravity="center"
            android:layout_marginLeft="30px"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginRight="30px"
            android:layout_height="60px" />
    </GridLayout>
    <TextView
        android:layout_marginTop="15px"
        android:background="#a0786868"
        android:layout_width="match_parent"
        android:layout_height="0.01px" />
    <TextView
        android:text="节日筛选"
        android:layout_margin="15px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <GridLayout
        android:rowCount="3"
        android:columnCount="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:text="元旦可接送"
            android:button="@null"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/personal_yuandan"
            android:background="@drawable/fuwu_personal"
            android:checked="true"
            android:gravity="center"

            android:layout_marginLeft="30px"
            android:layout_height="60px" />
        <CheckBox
            android:text="春节可接送"
            android:button="@null"
            android:background="@drawable/fuwu_personal"
            android:layout_marginLeft="30px"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/personal_cunjie"
            android:layout_height="60px" />
        <CheckBox
            android:text="清明节可接送"
            android:button="@null"
            android:background="@drawable/fuwu_personal"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/personal_qingming"
            android:layout_height="60px" />
        <CheckBox
            android:text="劳动节可接送"
            android:button="@null"
            android:background="@drawable/fuwu_personal"
            android:layout_marginLeft="30px"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:id="@+id/personal_laodong"
            android:layout_height="60px" />

    </GridLayout>


</LinearLayout>
