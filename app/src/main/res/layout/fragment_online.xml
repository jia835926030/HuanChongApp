<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGreyDark"
    tools:context="com.iblood.ui.online.OnlineFragment">
    <RadioGroup
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/fujinyouxian"
            android:text="附近优先"
            android:button="@null"
            android:textColor="#cd333333"
            android:layout_marginLeft="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/online_one"/>
        <TextView
            android:background="#7b716060"
            android:layout_width="match_parent"
            android:layout_height="0.01px" />
        <RadioButton
            android:id="@+id/haopingyouxian"
            android:text="好评优先"
            android:button="@null"
            android:textColor="#cd333333"
            android:layout_marginLeft="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/online_one"/>
        <TextView
            android:background="#7b716060"
            android:layout_width="match_parent"
            android:layout_height="0.01px" />
        <RadioButton
            android:id="@+id/dingdanyouxian"
            android:text="订单优先"
            android:button="@null"
            android:textColor="#cd333333"
            android:layout_marginLeft="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/online_one"/>
        <TextView
            android:background="#7b716060"
            android:layout_width="match_parent"
            android:layout_height="0.01px" />
        <RadioButton
            android:id="@+id/jiageconggao"
            android:text="价格从高到低"
            android:button="@null"
            android:textColor="#cd333333"
            android:layout_marginLeft="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/online_one"/>
        <TextView
            android:background="#7b716060"
            android:layout_width="match_parent"
            android:layout_height="0.01px" />
        <RadioButton
            android:id="@+id/jiagecongdi"
            android:text="价格从低到高"
            android:button="@null"
            android:textColor="#cd333333"
            android:layout_marginLeft="15px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/online_one"/>
    </RadioGroup>
</LinearLayout>
