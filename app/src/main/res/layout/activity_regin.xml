<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
      android:layout_height="match_parent"
    tools:context="com.iblood.ui.activity.ReginActivity">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:textColor="#FFD600"
           android:id="@+id/regin_fnishi"
           android:textSize="25sp"
           android:layout_marginTop="30px"
           android:text="取消"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:textColor="#FFD600"
           android:id="@+id/regin_login"
           android:textSize="25sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/regin_fnishi"
           android:layout_alignBottom="@+id/regin_fnishi"
           android:layout_alignParentEnd="true"
           android:layout_alignParentRight="true"
           android:text="登录" />
   </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/regin_fnishi"
        android:layout_marginTop="24px"
        android:textColor="#AAAAAA"
        tools:ignore="RtlCompat" />

    <TextView
        android:layout_marginLeft="45px"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="33px"
        android:layout_toStartOf="@+id/regin_login"
        android:text="欢迎您加入宠物寄养"
        android:textSize="30sp"
        tools:ignore="RtlCompat" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/regin_phone"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="32px"
        android:hint="请输入手机号码" />
<TextView
    android:id="@+id/regin_huo"
    android:textColor="#FFD600"
    android:textSize="20sp"
    android:text="获取验证码"
    android:gravity="center"
    android:background="@drawable/bg_welcome"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" />
</LinearLayout>
    <EditText
        android:id="@+id/regin_yan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regin_phone"
        android:hint="请输入验证码" />

    <EditText
        android:id="@+id/regin_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regin_yan"
        android:hint="请输入用户名" />

    <EditText
        android:id="@+id/regin_paswd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regin_photo"
        android:hint="设置6位数字密码" />

    <Button
        android:id="@+id/regin_star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regin_paswd"
        android:layout_marginTop="30dp"
        android:background="#FFD600"
        android:text="注册" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regin_star"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="               ------------------使用第三方账号注册------------------"
        android:textColor="#B9B9B9"
        android:id="@+id/textView6" />
       <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="110px">

    <ImageView
          android:layout_marginLeft="450px"
         android:id="@+id/regin_wx"
        android:layout_width="106px"
        android:layout_height="106px"
        android:src="@mipmap/login_weixin" />
    <ImageView
        android:layout_marginLeft="225px"
        android:id="@+id/regin_qq"
        android:layout_width="106px"
        android:layout_height="106px"
        android:src="@mipmap/login_qq" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50px">
    <TextView
        android:layout_marginLeft="226px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机QQ" />

    <TextView
        android:layout_marginLeft="466px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信" />
    </RelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
