    <include layout="@layout/title_layout"/>
    <TextView
        android:layout_marginTop="10dp"
        android:background="#B7B7B7"
        android:layout_width="match_parent"
        android:layout_height="2dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/userevaluation_numbering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:hint="订单编号:"
        android:textSize="30px" />
        <TextView
            android:layout_marginTop="20px"
            android:textSize="30px"
            android:text="1111111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:background="#D4D4D4"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:text="寄养宠物:"
            android:textSize="30px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userevaluation_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_marginTop="20px"
                android:id="@+id/userevaluation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/userevaluation_image"
                android:text="多吉"
                android:textSize="20px" />

            <ImageView
                android:id="@+id/userevaluation_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/userevaluation_introduction"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/userevaluation_name"
                android:layout_toRightOf="@+id/userevaluation_name"
                android:src="@drawable/male" />

            <TextView
                android:layout_marginTop="25px"
                android:id="@+id/userevaluation_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userevaluation_name"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/userevaluation_image"
                android:text="身长约120cm，体毛粗硬"
                android:textSize="20px" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:background="#D4D4D4"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userevaluation_fostercaretime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:text="寄养时间：2016-03-31至2016-04-28"
                android:textSize="30px" />
            <TextView
                android:layout_marginTop="10dp"
                android:background="#D4D4D4"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userevaluation_pet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="宠物"
                        android:textSize="20px" />
<TextView
    android:textColor="#D4D4D4"
    android:layout_width="match_parent"
    android:layout_height="1dp" />
                    <TextView
                        android:id="@+id/userevaluation_petname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:layout_weight="1"
                        android:text="多吉"
                        android:textSize="20px" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userevaluation_lement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="元/晚"
                        android:textSize="20px" />
                    <TextView
                        android:textColor="#D4D4D4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:layout_marginTop="20px"
                        android:id="@+id/userevaluation_lement1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10"
                        android:textSize="20px" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userevaluation_late"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="晚"
                        android:textSize="20px" />
                    <TextView
                        android:textColor="#D4D4D4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:layout_marginTop="20px"
                        android:id="@+id/userevaluation_late1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="28"
                        android:textSize="20px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userevaluation_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="金额"
                        android:textSize="20px" />
                    <TextView
                        android:textColor="#D4D4D4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                    <TextView
                        android:layout_marginTop="20px"
                        android:id="@+id/userevaluation_money1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="280"
                        android:textSize="20px" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:background="#D4D4D4"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userevaluation_Other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:text="其他服务"
                    android:textSize="30px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:layout_marginTop="30px"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userevaluation_projects"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="项目"
                            android:textSize="20px" />

                        <TextView
                            android:layout_marginTop="20px"
                            android:id="@+id/userevaluation_huttle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="接送"
                            android:textSize="20px" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userevaluation_unitprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="单价"
                            android:textSize="20px" />

                        <TextView
                            android:layout_marginTop="20px"
                            android:id="@+id/userevaluation_kilometres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="10元/"
                            android:textSize="20px" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userevaluation_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="数量"
                            android:textSize="20px" />

                        <TextView
                            android:layout_marginTop="20px"
                            android:id="@+id/userevaluation_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1次"
                            android:textSize="20px" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userevaluation_othermoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="金额"
                            android:textSize="20px" />

                        <TextView
                            android:layout_marginTop="20px"
                            android:id="@+id/userevaluation_money2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="10"
                            android:textSize="20px" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="8px"
                android:layout_marginTop="10dp"
                android:background="#cecdcd" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px">

                <ImageView
                    android:layout_marginTop="25dp"
                    android:id="@+id/userevaluation_headportrait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20px"
                    android:id="@+id/userevaluation_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/userevaluation_headportrait"
                    android:text="帅比"
                    android:textSize="30px" />

                <com.iblood.ui.ordermodole.xing.RatingBar
                    android:layout_below="@+id/userevaluation_username"
                    android:layout_toEndOf="@+id/userevaluation_headportrait"
                    android:layout_toRightOf="@+id/userevaluation_headportrait"
                    android:id="@+id/star"
                    android:paddingTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    app:starCount="5"
                    app:starEmpty="@drawable/rating_small_empty"
                    app:starFill="@drawable/rating_small_full"
                    app:starHalf="@drawable/rating_small_half"
                    app:starImageSize="35dp"
                    app:starPadding="1dp"
                    app:starStep="2.5"
                    app:stepSize="Half"/>

            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:background="#D4D4D4"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:text="订单时间：2016-04-19 11:12:39"
            android:textSize="20px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:text="订单金额：100"
            android:textSize="20px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:text="应付金额：100"
            android:textSize="20px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:text="已同意"
                android:textSize="20px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:layout_marginTop="20px"
                android:text="《双方寄养服务协议》"
                android:textColor="#3acafa"
                android:textSize="20px" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<Button-->
            <!--android:id="@+id/userevaluation_button"-->
            <!--android:layout_width="200px"-->
            <!--android:layout_height="80px"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_marginRight="20px"-->
            <!--android:background="#ffee33"-->
            <!--android:gravity="center"-->
            <!--android:text="评价"-->
            <!--android:textSize="40px" />-->
    </RelativeLayout>
</LinearLayout>
