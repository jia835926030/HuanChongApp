<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_bg"
    android:layout_height="match_parent"
   >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <TextView
        android:id="@+id/reg_fnishi"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19px"
        android:layout_marginStart="19px"
        android:layout_marginTop="52px"
        android:background="@mipmap/fanhui"
        android:textColor="#E8E8E8" />

    <TextView
        android:id="@+id/regin_zhu"
        android:layout_width="120px"
        android:layout_height="70px"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/reg_fnishi"
        android:layout_marginEnd="14px"
        android:layout_marginRight="14px"
        android:text="注册"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:layout_below="@+id/reg_fnishi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33px"
        android:text="欢迎你加入宠物寄养"
        android:textColor="#B2B0B1"
        android:textSize="30sp" />
    <EditText
        android:id="@+id/login_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:textColorHint="#B9B9B9"
        android:hint="请输入手机号码" />
    <EditText
        android:id="@+id/login_paswd"
        android:password="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_phone"
        android:layout_marginTop="12px"
        android:textColorHint="#B9B9B9"
        android:hint="请输入密码" />

    <TextView
        android:id="@+id/login_wang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/login_paswd"
        android:layout_alignBottom="@+id/login_paswd"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="忘记密码"
        android:textColor="#FFD600"
        android:textSize="20sp" />
    <Button
        android:background="#FFD600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_paswd"
        android:layout_marginTop="50px"
        android:text="登录"
        android:id="@+id/login_star" />
    <TextView
        android:textColor="#B9B9B9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_star"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44px"
        android:text="-------------使用第三方账号登录-------------"
        android:id="@+id/textView2" />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/login_wx"
            android:layout_width="106px"
            android:layout_height="106px"
            android:layout_marginLeft="200px"
            android:src="@mipmap/login_weixin" />

        <ImageView
            android:id="@+id/Login_QQ"
            android:layout_width="106px"
            android:layout_height="106px"
             android:layout_marginLeft="430px"
             android:src="@mipmap/login_qq" />
     </RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

       <TextView
        android:layout_marginLeft="433px"
         android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机QQ"
        android:textColor="#B9B9B9" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220px"
        android:text="微信"
        android:textColor="#B9B9B9" />
</RelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
