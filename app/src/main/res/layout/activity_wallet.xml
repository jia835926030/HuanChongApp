<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f8f9f6"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="钱包余额"
        android:textSize="30px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_Balance"
        android:textSize="40px"
        android:text="160.00元"
        android:textColor="#ef890c"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25px"
        />

    <LinearLayout
        android:background="#7864"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="180px"
            android:layout_height="70px"
            android:layout_marginLeft="80px"
            android:layout_marginRight="20px"
            android:text="充值"
            android:gravity="center"
            android:textSize="30px"

            />
        <TextView
            android:layout_width="180px"
            android:layout_height="70px"
            android:layout_marginRight="80px"
            android:layout_marginLeft="20px"
            android:text="提现"
            android:gravity="center"
            android:textSize="30px"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="#eaece6"
        />

<com.zhy.autolayout.AutoRelativeLayout
android:layout_width="match_parent"
android:layout_height="70px"
android:background="#eeeff1"
android:layout_marginTop="40px"

    >
<TextView
    android:layout_width="50px"
    android:layout_height="50px"
    android:background="@drawable/alipay"
    android:layout_marginLeft="20px"
    android:id="@+id/zhifubao"
    android:layout_centerVertical="true"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/zhifubao"
    android:text="我的支付宝"
    android:layout_centerVertical="true"
    android:layout_marginLeft="50px"
    android:textColor="#000a0a"


    />
<TextView
    android:layout_width="30px"
    android:layout_height="30px"
    android:background="@drawable/enter"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    />
</com.zhy.autolayout.AutoRelativeLayout>

<TextView
android:layout_width="match_parent"
android:layout_height="0.1dp"
android:background="#44f27609"
    />
<RelativeLayout
android:layout_width="match_parent"
android:layout_height="70px"
android:background="#f6f7f3"


    >
<TextView
    android:layout_width="50px"
    android:layout_height="50px"
    android:background="@drawable/coupon"
    android:layout_marginLeft="20px"
    android:id="@+id/youhuijquan"
    android:layout_centerVertical="true"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/youhuijquan"
    android:text="我的优惠券"
    android:layout_centerVertical="true"
    android:layout_marginLeft="50px"
    android:textColor="#0d0d0d"


    />
<TextView
    android:layout_width="30px"
    android:layout_height="30px"
    android:background="@drawable/enter"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    />
</RelativeLayout>
<TextView
android:layout_width="match_parent"
android:layout_height="0.1dp"
android:background="#989b93"
    />
<RelativeLayout
android:layout_width="match_parent"
android:layout_height="70px"
android:background="#55f5f9f7"


    >
<TextView
    android:layout_width="50px"
    android:layout_height="50px"
    android:background="@drawable/integral"
    android:layout_marginLeft="20px"
    android:id="@+id/jifen"
    android:layout_centerVertical="true"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/jifen"
    android:text="我的积分"
    android:layout_centerVertical="true"
    android:layout_marginLeft="50px"
    android:textColor="#030303"


    />
<TextView
    android:layout_width="30px"
    android:layout_height="30px"
    android:background="@drawable/enter"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    />
</RelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>

