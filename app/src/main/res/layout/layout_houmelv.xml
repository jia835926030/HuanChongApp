<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10px"
    >

    <ImageView
        android:id="@+id/img_homelv"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        android:layout_width="80px"
        android:layout_height="80px" />
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="10px"
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:text="一号足疗师"
            android:textSize="15sp"
            android:id="@+id/name_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/star"
                android:layout_width="30px"
                android:layout_height="30px" />
            <ImageView
                android:src="@drawable/star"
                android:layout_width="30px"
                android:layout_height="30px" />
            <ImageView
                android:src="@drawable/star"
                android:layout_width="30px"
                android:layout_height="30px" />
            <ImageView
                android:src="@drawable/star"
                android:layout_width="30px"
                android:layout_height="30px" />
            <ImageView
                android:src="@drawable/icon_detail_evaluate_half"
                android:layout_width="30px"
                android:layout_height="30px" />
        </LinearLayout>
        <TextView
            android:id="@+id/dizhi_home"
            android:textSize="10sp"
            android:textColor="#8f7b6868"
            android:text="天上人间 二楼包房"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="aa"
            android:id="@+id/jiage_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="aa"
            android:id="@+id/juli_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
